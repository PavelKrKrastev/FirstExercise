<UserControl x:Class="NemetschekFirstAssigment.Views.Advanced1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NemetschekFirstAssigment.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            
            <StackPanel>
                <Label Content="Choose language:"/>
                <ComboBox ItemsSource="{Binding LanguageMode}" Margin="5,0,5,5" SelectedIndex="0"></ComboBox>
            </StackPanel>

            <StackPanel >
                <Label Content="Select a power mode:"/>
                <ComboBox ItemsSource="{Binding PowerMode}" Margin="5,0,5,5" SelectedIndex="0"></ComboBox>
            </StackPanel>

            <StackPanel >
                <Label Content="Select battery mode:"/>
                <ComboBox ItemsSource="{Binding BatteryMode}" Margin="5,0,5,5" SelectedIndex="0"></ComboBox>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
